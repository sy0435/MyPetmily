<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/pw_btn"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:layout_below="@+id/edPW"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/pw_cancleBtn"
        android:layout_toRightOf="@+id/pw_cancleBtn"
        android:background="@drawable/login_stroke"
        android:shadowColor="@android:color/transparent"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/pw_cancleBtn"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:layout_below="@+id/edPW"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_stroke"
        android:shadowColor="@android:color/transparent"
        android:textColor="#969696"
        android:text="취소"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="286dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="183dp"
        android:gravity="center"
        android:text="현재 비밀번호를 입력해주세요"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edPW"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="258dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:ems="10"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:textSize="18sp" />

</RelativeLayout>